<div class="page-header">
  <h1> Nuevo Hacker </h1>
</div>

<%= form_for @hacker, html: { class: "form-horizontal generation" } do |f| %>
  <%= render 'form', f: f %>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit "Guardar", class: 'btn btn-primary' %>
      <%= link_to "Cancelar",  generations_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>