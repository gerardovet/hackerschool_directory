<div class="page-header">
  <h1><%= @hacker.name %></h1>
</div>

<%= form_for [@generation, @hacker], html: { class: "form-horizontal generation" } do |f| %>
	<%= render 'form', f: f %>

	<div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit "Actualizar", class: 'btn btn-primary' %>
      <%= link_to "Cancelar",  generation_hackers_path(@generation), class: 'btn btn-default' %>
    </div>
  </div>
<% end %>